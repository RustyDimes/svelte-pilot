{
  "parser": "@typescript-eslint/parser",

  "extends": [
    "enough",
    "plugin:@typescript-eslint/recommended"
  ],

  "env": {
    "browser": true,
    "node": true
  },

  "plugins": [
    "@typescript-eslint",
    "svelte3"
  ],

  "overrides": [
    {
      "files": ["src/**/*.svelte"],
      "processor": "svelte3/svelte3"
    }
  ],

  "rules": {
    "no-multiple-empty-lines": ["error", { "max": 1, "maxBOF": 2, "maxEOF": 1 }]
  }
}
