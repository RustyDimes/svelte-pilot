{
  "extends": [
    "enough"
  ],

  "env": {
    "browser": true,
    "node": true
  },

  "plugins": [
    "ext",
    "svelte3"
  ],

  "overrides": [
    {
      "files": ["src/**/*.svelte"],
      "processor": "svelte3/svelte3"
    }
  ],

  "rules": {
    "ext/lines-between-object-properties": ["error", "always", { "exceptBetweenSingleLines": true }],
    "no-multiple-empty-lines": ["error", { "max": 1, "maxBOF": 2, "maxEOF": 1 }]
  }
}
